@model DivingApp.Models.ViewModel.LoginViewModel

<form asp-controller="Auth" asp-action="Login" asp-anit-forgery="true">
    <div class="row col-lg-12">
        <div class="container" style="position:relative;top:250px" id="loginPanel" ng-show="lgCtrl.showLogin">
            <div class="col-lg-3"></div>
            <div class="col-lg-5">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Logbook owner information</h3>
                    </div>
                    <div class="panel-body">
                        <input asp-for="Email" placeholder="Email address" class="form-control" />
                    </div>
                    <div class="panel-body">
                        <input asp-for="Password" placeholder="Password" type="password" class="form-control" />
                    </div>
                    <div class="panel-body">
                        <div>
                            <input type="submit" value="Open logbook" class="btn  btn-primary btn-md pull-right btn-block" />
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-lg-6">
                                <a asp-controller="Auth" asp-action="Register">Create new logbook</a>
                            </div>
                            <div class="col-lg-6 text-right">
                                <input asp-for="RememberMe" type="checkbox" />
                                <span>Remember me</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div asp-validation-summary="ValidationSummary.All" class="text-danger" style="padding-top:10px;"></div>
              
            </div>
            <div class="col-lg-3"></div>

        </div>

        <div class="container" style="position:relative;top:250px" id="paspPanel" ng-show="lgCtrl.showSearch">

            <div class="col-lg-3"></div>

            <div class="col-lg-5">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Search diver</h3>
                    </div>
                    <div class="panel-body">
                        <input id="diverSearch" type="text" class="form-control" placeholder="Firstname, Lastname" ng-model="lgCtrl.searchCriteria" />
                    </div>

                    <div class="panel-body">
                        <div class="btn  btn-primary btn-md pull-right btn-block" ng-click="lgCtrl.searchDivers()">Start search </div>
                    </div>
                </div>

                <div id="diversNotFound" class="alert alert-warning text-center" ng-show="lgCtrl.showSearchNotFound">
                    No entries found by search criteria
                </div>
            </div>


            <div class="col-lg-3"></div>
        </div>

        <div class="container" style="position:relative;top:150px;" id="diversResults" ng-show="lgCtrl.showSearchResults">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="col-lg-1">&nbsp;</span>
                        <span class="hidden-md hidden-sm hidden-xs col-lg-1">Photo</span>
                        <span>Information</span>
                    </h3>
                </div>
                <div class="panel-body" ng-repeat="p in lgCtrl.searchResults">
                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="hidden-md hidden-sm hidden-xs col-lg-1" style="margin-left:-10px;padding-left:-10px">
                                <div class="btn btn-primary btn-sm" ng-click="lgCtrl.openPasp(p.email)" style="position:absolute;top:25%">Open</div>
                            </div>
                            <div class="hidden-md hidden-sm hidden-xs col-lg-1" style="margin-left:-10px;margin-right:20px;padding-left:-10px;width:75px;height:50px">
                                <img ng-src="api/getuserphoto/{{p.UserName}}" class="img-responsive img-circle pull-left" style="height:100%;width:100%; margin:5px;" />
                            </div>                    
                            <div>
                                <h5><b>Diver: </b>{{p.FullName}}, <b>Age:</b> {{p.age}}</h5>
                                <h5><b>Email: </b> {{p.UserName}} <b>Contact: </b>{{p.FullAddress}} &nbsp;<img ng-src="@Url.Action("GetFlag", "Dive")/{{p.countryCode}}" /></h5>
                             
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

