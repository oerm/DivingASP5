<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="stylesheet" type="text/css" href="~/css/site.min.css" />
    <script src="~/js/site.min.js"></script>
    <script src="~/js/controllers.min.js"></script>
  
</head>

<body ng-app="diving-app" ng-controller="rootController as rootCtrl" >
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-brand">
                DIVE LOGBOOK
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="dropdown" ng-class="rootCtrl.showDive? 'active' :''" ng-click="rootCtrl.showTab(1)">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-flag"></i>
                            &nbsp;Dives&nbsp;&nbsp;<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#" ng-click="rootCtrl.DiveCreateNew()">Create new dive</a></li>
                            <li ng-class="{'disabled': !rootCtrl.HasDives() }"><a href="#" ng-click="rootCtrl.DiveShowDives()" >Show dives</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="disabled"><a href="#">Search for dive</a></li>
                        </ul>
                    </li>
                    <li ng-class="rootCtrl.showSearch? 'active' :''" ng-click="rootCtrl.showTab(2)">
                        <a href="#">
                            <i class="fa fa-search"></i>
                            &nbsp;Search Diver
                        </a>
                    </li>
                    <li ng-class="rootCtrl.showNews? 'active' :''" ng-click="rootCtrl.showTab(3)">
                        <a href="#">
                            <i class="fa fa-newspaper-o"></i>
                            &nbsp;News
                        </a>
                    </li>
                   

                </ul>
                <ul class="nav navbar-nav pull-right">                  
                    <li>
                        <a asp-controller="Auth" asp-action="Edit">
                            <i class="fa fa-edit"></i>
                            &nbsp;
                            Edit profile
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Logbook" asp-action="Logout">
                            <i class="fa fa-home"></i>
                            &nbsp;
                            Logout
                        </a>
                    </li>
                    @*<li>
                        <div style="padding:2px; height:50px;width:50px;">
                            <img src="/api/getuserphoto/@User.Identity.Name" onerror="this.src = '/images/icon.png'" class="img-thumbnail " style="height:100%;width:100%;padding:0;" />
                        </div>
                    </li>*@
                  
                </ul>
             
            </div>
        </div>
    </nav>

    <main id="body" style="padding-bottom:80px;">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
            <h3 class="navbar-brand">
                &copy; @DateTime.Now.Year - Oleksii Yermolenko
            </h3>
        </div>
    </footer>

</body>
</html>
